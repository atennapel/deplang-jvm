Nat1 = (A : U0 Val) -> A -> (A -> A) -> A;
Z1 : Nat1 = \A z s. z;
S1 : Nat1 -> Nat1 = \n A z s. s (n A z s);
foldNat1 : {A : U0 Val} -> Nat1 -> A -> (A -> A) -> A =
  \{A} n z s. n A z s;

fold : {A : U0 Val} -> Nat -> A -> (Nat -> A -> A) -> A =
  \{A} n z s. foldNat n z (\m r. s m r);

pred : Nat -> Nat := \n. fold {Nat} n Z (\m _. m);
(+) : Nat -> Nat -> Nat := \a b. fold {Nat} a b (\_ r. S r);
(*) : Nat -> Nat -> Nat := \a b. fold {Nat} a Z (\_ r. b + r);

pow : Nat1 -> Nat -> Nat =
  \n m. foldNat1 {Nat} n 1 (\n. m * n);

